<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            <%- include ("./partials/messages"); %>
                <form action="/users/AddLesson" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                            value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="ostad">Professor's Name</label>
                        <input type="text" id="name" name="ostad" class="form-control" placeholder="Enter Professor's Name"
                            value="<%= typeof ostad != 'undefined' ? ostad : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="place">place</label>
                        <input type="text" id="name" name="place" class="form-control" placeholder="Enter place"
                            value="<%= typeof place != 'undefined' ? place : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="daneshkade">Daneshkade</label>
                        <input type="text" id="name" name="daneshkade" class="form-control" placeholder="Enter Daneshkade"
                            value="<%= typeof daneshkade != 'undefined' ? daneshkade : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="vahed">Vahed</label>
                        <input type="number" id="name" name="vahed" class="form-control" placeholder="Enter Vahed"
                            value="<%= typeof vahed != 'undefined' ? vahed : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="zarfiat">Zarfiat</label>
                        <input type="number" id="name" name="zarfiat" class="form-control" placeholder="Enter Zarfiat"
                            value="<%= typeof zarfiat != 'undefined' ? zarfiat : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="saat">saat</label>
                        <input type="text" id="name" name="saat" class="form-control" placeholder="Enter saat"
                            value="<%= typeof saat != 'undefined' ? saat : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="day">Day</label>
                        <input type="text" id="name" name="day" class="form-control" placeholder="Enter Day"
                            value="<%= typeof day != 'undefined' ? day : '' %>" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Add
                    </button>
                </form>
                <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
        </div>
    </div>
</div>